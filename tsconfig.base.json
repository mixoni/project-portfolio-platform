{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@portfolio/data-access": [
        "libs/portfolio/data-access/src/public-api.ts"
      ],
      "@portfolio/ui": ["libs/portfolio/ui/src/public-api.ts"],
      "@shared/ui": ["libs/shared/ui/src/public-api.ts"],
      "@shared/util": ["libs/shared/util/src/public-api.ts"]
    },
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "useDecorators": true,
    "strict": true,
    "types": ["node", "jest"]
  }
}
