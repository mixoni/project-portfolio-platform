{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@portfolio/data-access": [
        "libs/portfolio/data-access/src/public-api.ts"
      ],
      "@portfolio/feature-projects": [
        "libs/portfolio/feature-projects/src/public-api.ts"
      ],
      "@portfolio/ui": [
        "libs/portfolio/ui/src/public-api.ts"
      ],
      "@shared/ui": [
        "libs/shared/ui/src/public-api.ts"
      ],
      "@shared/util": [
        "libs/shared/util/src/public-api.ts"
      ]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "strict": true,
    "types": [
      "node",
      "jest"
    ]
  }
}